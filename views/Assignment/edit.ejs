<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="courseTextField">Course Title</label>
                    <input type="text" class="form-control" id="courseTextField" placeholder="Enter the Course Name" name="Course" value="<%= assignment.Course %>" required>
                </div>
                <div class="form-group">
                    <label for="assignmentTextField">Assignment</label>
                    <input type="text" class="form-control" id="assignmentTextField" placeholder="Enter the Assignment Name" name="Assignment" value="<%= assignment.Assignment %>" required>
                </div>
                <div class="form-group">
                    <label for="duedateTextField">DuteDate</label>
                    <input type="text" class="form-control" id="duedateTextField" placeholder="Enter the Dute Date" name="DuteDate" value="<%= assignment.DuteDate %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Assignment Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter Assignment Description" name="Description" required><%= assignment.AssignmentDescription %></textarea>
                </div>
                <div class="form-group">
                    <label for="statuesTextField">Statues</label>
                    <input type="text" class="form-control" id="statuesTextField" placeholder="Statues" name="Statues" value="<%= assignment.Statues %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>